<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/projectColor"
    tools:context=".viambatanishi">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColor="#000000"
        android:text="Fomu Ya Malipo Ya Mchanga"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textAlignment="center"
        android:text="Viambatanishi" />



    <Button
        android:id="@+id/btnSheha"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="126dp"
        android:text="Chagua kiambatanishi cha Sheha"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:backgroundTint="@color/upload" />

    <TextView
        android:id="@+id/shehaName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textAlignment="center" />


    <Button
        android:id="@+id/btnKibali"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Chagua kiambatanishi cha Kibali"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:backgroundTint="@color/upload" />

    <TextView
        android:id="@+id/kibaliName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnTuma"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="240dp"
        android:text="Tuma Maombi"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:backgroundTint="@color/button" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>